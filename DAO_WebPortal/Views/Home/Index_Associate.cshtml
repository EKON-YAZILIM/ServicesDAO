    <!-- /.col-->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <svg class="comment-icon text-primary">
                    <use xlink:href="/Home/images/svg/free.svg#cil-library-add"></use>
                </svg> My Jobs As Doer
            </div>
            <div class="card-body h-300">
