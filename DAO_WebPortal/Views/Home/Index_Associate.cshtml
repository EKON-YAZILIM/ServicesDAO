@{
    Layout = "../Shared/_MainLayout.cshtml";
}
@model Helpers.Models.WebsiteViewModels.DashBoardViewModelVA;

<div class="row">
    <div class="col-md-3">
        <div class="card mb-3">
            <div class="card-body p-2">
                <svg class="dashIcon text-success">
                    <use xlink:href="/Home/images/svg/free.svg#cil-star"></use>
                </svg>
                <h6 class="card-title mb-1">
                    Available Reputation
                </h6>
                <h3 class="text-right mb-0">
                    @if (Model.UserReputation != null)
                    {
                        @String.Format("{0:0.00000}", Math.Round(Model.UserReputation.LastUsableTotal, 5))
                    }
                    else
                    {
                        <span>-</span>
                    }
                </h3>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body p-2">
                <svg class="dashIcon text-success">
                    <use xlink:href="/Home/images/svg/free.svg#cil-library-add"></use>
                </svg>
                <h6 class="card-title mb-1">
                    My Jobs
                </h6>
                <h3 class="text-right mb-0 fw-semibold">
                    @Model.MyJobCount
                </h3>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body p-2">
                <svg class="dashIcon text-success">
                    <use xlink:href="/Home/images/svg/free.svg#cil-auction"></use>
                </svg>
                <h6 class="card-title mb-1">
                    My Auctions
                </h6>
                <h3 class="text-right mb-0 fw-semibold">
                    @Model.MyAuctionCount
                </h3>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body p-2">
                <svg class="dashIcon text-success">
                    <use xlink:href="/Home/images/svg/free.svg#cil-thumb-up"></use>
                </svg>
                <h6 class="card-title mb-1">
                    My Votes
                </h6>
                <h3 class="text-right mb-0 fw-semibold">
                    @Model.MyVotesCount
                </h3>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card p-0">
            <div class="card-header">
                <svg class="comment-icon text-primary">
                    <use xlink:href="/Home/images/svg/free.svg#cil-comment-bubble"></use>
                </svg>Latest Comments
            </div>
            <div class="card-body mt-1 h-300 overflowy">

                @if (Model.LastComments.Count > 0)
                {
                    @foreach (var item in Model.LastComments)
                    {
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="mb-1">
                                    <img src="~/Home/images/avatars/@item.ProfileImage" alt="" class="rounded-circle dashboardAvatar" width="25" height="25" onerror="this.src='../Home/images/avatars/default.png'"> @item.UserName <small class="smallDate">@item.Date</small>

                                    <a class="float-right font-weight-normal" href="../Job-Detail/@item.JobID"><small>Go to job detail</small></a>
                                </h6>
                                <p class="comment-p mt-2 mb-0">
                                    @DAO_WebPortal.Utility.StringHelper.ShortenString(item.Comment, 150)
                                </p>
                            </div>
                        </div>


                    }
                }
                else
                {
                    <partial name="../Shared/_EmptyPartial.cshtml" view-data='new ViewDataDictionary(ViewData) { { "Message", "No comments yet." } }' />
                }

            </div>
        </div>

    </div>
    <div class="col-md-4">
        <div class="card p-0">
            <div class="card-header">
                <svg class="comment-icon text-warning">
                    <use xlink:href="/Home/images/svg/free.svg#cil-star"></use>
                </svg>Trending Topics
            </div>
            <div class="card-body mt-1 h-300 overflowy">
                @if (Model.PopularJobs.Count > 0)
                {
                    @foreach (var item in Model.PopularJobs)
                    {
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="mb-2">
                                    <a href="../Job-Detail/@item.JobID">@DAO_WebPortal.Utility.StringHelper.ShortenString(item.Title, 50)</a>
                                    <small class="smallDate float-right mt-1">@item.CreateDate</small>
                                </h6>

                                <p class="comment-p mb-0">
                                    @DAO_WebPortal.Utility.StringHelper.ShortenString(item.JobDescription, 150)
                                </p>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <partial name="../Shared/_EmptyPartial.cshtml" view-data='new ViewDataDictionary(ViewData) { { "Message", "No popular jobs yet." } }' />
                }
            </div>
        </div>
    </div>
</div>

<!-- /.row-->
<!--Row-->
<div class="row mt-4">
    <!--.col-->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <svg class="comment-icon text-primary">
                    <use xlink:href="/Home/images/svg/free.svg#cil-briefcase"></use>
                </svg> My Jobs As Owner
            </div>
            <div class="card-body h-300">
                @if (Model.MyJobs.ownedJobs.Count() > 0)
                {
                    <div class="table-responsive" style="max-height:500px">
                        <!--Table-->
                        <partial name="../Shared/_JobTablePartial.cshtml" model="Model.MyJobs.ownedJobs" />
                    </div>
                }
                else
                {
                    <partial name="../Shared/_EmptyPartial.cshtml" view-data='new ViewDataDictionary(ViewData) { { "Message", "You don՚t have any owner jobs." } }' />
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>



