                                <th scope="col">Submitted</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Status == Helpers.Constants.Enums.JobStatusTypes.Active /*&& item.IsFormal*/ == true)
                                {
                                    <tr class="cursorp voteDetail" >
                                        <th scope="row">4</th>
                                        @*<td>@item.Title</td>*@
                                        <td>Milestone</td>
                                        <td>&euro;18.000</td>
                                        <td>@Html.Raw(item.EndDate - DateTime.Now)</td>
                                        <td>18/25 &#10003;</td>
                                        <td>@item.CreateDate</td>
                                    </tr>
                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <div class="tab-pane p-3" role="tabpanel" id="code-924">

            <div class="card m-2">
                <div class="card-header">
                    <span class="small ms-1">Completed Internal Auctions</span>
