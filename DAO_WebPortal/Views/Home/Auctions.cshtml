                                                        </a>

                                                    }
                                                    else if (auction.UsersBidId != null)
                                                    {
                                                        <a class="btn btn-sm btn-danger text-white me-2" onclick="DeleteBid(this, @auction.UsersBidId)">
                                                            <svg class="icon">
                                                                <use xlink:href="/Home/images/svg/free.svg#cil-trash"></use>
                                                            </svg> Delete Bid
