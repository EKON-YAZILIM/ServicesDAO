

@using PagedList.Core.Mvc
@using PagedList.Core
@model StaticPagedList<Helpers.Models.DtoModels.LogDbDto.ApplicationLogDto>

@{
    Layout = "../Shared/_MainLayout.cshtml";
}


<!-- Row -->
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th width="20%" scope="col">Application</th>
                            <th width="20%" scope="col">Date</th>
                            <th width="20%" scope="col">Type</th>
                            <th width="40%" scope="col">Explanation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Application</td>
                                <td>@item.Date</td>
                                <td>@item.Type</td>
                                <td>@item.Explanation</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
        else
        {
            <partial name="../Shared/_EmptyPartial.cshtml" view-data='new ViewDataDictionary(ViewData) { { "Message", "Application log not found." } }' />
        }
    </div>
</div>

@if (Model.Count() > 0)
{
    @*############ PAGINATION ############*@
    <center>
        <table class="mb-5">
            <tr>
                <td colspan="3" align="center">
                    <pager class="pager-container" list="@Model" options="@PagedListRenderOptions.Bootstrap4Full" asp-action="Application-Logs" asp-controller="Home" />

                </td>
            </tr>
        </table>
    </center>
}