@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

@model List<Helpers.Models.WebsiteViewModels.RfpBidDetailModel>;

<div class="row d-flex">
    <div class="col d-flex">
        <a class="align-self-end" href="../RFPs" role="tab" aria-selected="true">
            <svg class="icon me-2">
                <use xlink:href="/Home/images/svg/free.svg#cil-chevron-left"></use>
            </svg>RFP's
        </a>
    </div>
</div>

<div class="tab-content rounded-bottom mt-2">
    <div class="tab-pane p-3 active">
        <div class="card m-2">
            <div class="card-header">
                <span class="small ms-1">Bids</span>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">User ID</th>
                            <th scope="col">Date</th>
                            <th scope="col">Time</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="cursorp">
                                    <th scope="row">@item.UserId</th>
                                    <td>@item.createDate</td>
                                    <td>@item.time</td>
                                    <td>@item.amount</td>
                                    <td>@item.note</td>
                                </tr>
                            }

                        }
                        catch  { }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>