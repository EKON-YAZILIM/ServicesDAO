@model List<Helpers.Models.DtoModels.ReputationDbDto.UserReputationHistoryDto>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@if (Model.Count > 0)
{
    <div>
        <h2>My Available Reputation: @Model.Last().LastUsableTotal</h2>
        <p>Total: @Model.Last().LastTotal</p>
        <p>Staked: @Model.Last().LastStakedTotal</p>
    </div>
}
else
{
    <div>
        <h2>My Available Reputation:  0.00000</h2>
        <p>Total: 0.00000</p>
        <p>Staked: 0.00000</p>
        <p>Minted Pending:0.00000</p>
    </div>
}

<div class="tab-content rounded-bottom mt-2">
    <div class="tab-pane p-3 active" role="tabpanel" id="preview-924">
        <div class="card m-2">
            <div class="card-header">
                <span class="small ms-1">Reputation History Table</span>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Explanation</th>
                            <th scope="col">Earned</th>
                            <th scope="col">Lost</th>
                            <th scope="col">Staked</th>
                            <th scope="col">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Explanation</td>
                                <td>@item.EarnedAmount</td>
                                <td>@item.LostAmount</td>
                                <td>@item.StakedAmount</td>
                                <td>@item.Date</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
