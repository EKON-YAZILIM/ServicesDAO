@model List<Helpers.Models.DtoModels.ReputationDbDto.UserReputationHistoryDto>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@if (Model.Count > 0)
{
    <div>
        <h2>My Available Reputation: @Math.Round(Model.Last().LastUsableTotal, 5)</h2>
        <h5>Total: @Math.Round(Model.Last().LastTotal,5)</h5>
        <h5>Staked: @Math.Round(Model.Last().LastStakedTotal, 5)</h5>
    </div>
}
else
{
    <div>
        <h2>My Available Reputation:  0.00000</h2>
        <h5>Total: 0.00000</h5>
        <h5>Staked: 0.00000</h5>
    </div>
}

<div class="tab-content rounded-bottom mt-2">
    <div class="tab-pane p-3 active" role="tabpanel" id="preview-924">
        <div class="card m-2">
            <div class="card-header">
                <span class="small ms-1"><b>Reputation History Table</b></span>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Explanation</th>
                            <th scope="col">Earned</th>
                            <th scope="col">Lost</th>
                            <th scope="col">Staked</th>
                            <th scope="col">Released</th>
                            <th scope="col">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Explanation</td>
                                <td>@Math.Round(item.EarnedAmount, 5)</td>
                                <td>@Math.Round(item.LostAmount, 5)</td>
                                <td>@Math.Round(item.StakedAmount, 5)</td>
                                <td>@Math.Round(item.StakeReleasedAmount, 5)</td>
                                <td>@item.Date</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
