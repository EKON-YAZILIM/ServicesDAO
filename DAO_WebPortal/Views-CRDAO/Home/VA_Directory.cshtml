@{
    Layout = "../Shared/_MainLayout.cshtml";
}

@model List<Helpers.Models.WebsiteViewModels.VADirectoryViewModel>

<style>
    th {
        cursor: pointer;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <span class="small ms-1"><b style="line-height: 30px;">Voting Associates Directory</b></span>
            </div>
            <div class="card-body p-0">
                @if (Model.Count > 0)
                {
                    <div class="table-responsive h-500">
                        <table class="table table-striped table-hover table-sortable" id="vaTable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name <i class="fas fa-sort"></i> </th>
                                    <th scope="col">Email <i class="fas fa-sort"></i></th>
                                    <th scope="col">V% Total <i class="fas fa-sort"></i></th>
                                    <th scope="col">V% last month <i class="fas fa-sort"></i></th>
                                    <th scope="col">V% this month <i class="fas fa-sort"></i></th>
                                    <th scope="col">Total Rep <i class="fas fa-sort"></i></th>
                                    <th scope="col">Date became VA <i class="fas fa-sort"></i></th>
                                </tr>
                            </thead>
                            <tbody id="sortable">
                                @{
                                    int counter = 0;
                                }
                                @foreach (var item in Model.OrderBy(x => x.DateBecameVA))
                                {
                                    counter++;
                                    <tr>
                                        <th>@counter</th>
                                        <th>@item.Name</th>
                                        <td>@item.Email</td>
                                        <td>
                                            @if (item.VTotal >= 100)
                                            {
                                                <span>100</span>
                                            }
                                            else
                                            {
                                                <span>@item.VTotal</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.VLastMonth >= 100)
                                            {
                                                <span>100</span>
                                            }
                                            else
                                            {
                                                <span>@item.VLastMonth</span>
                                            }
                                        <td>
                                                @if (item.VThisMonth >= 100)
                                                {
                                                <span>100</span>
                                                }
                                                else
                                                {
                                                <span>@item.VThisMonth</span>
                                                }
                                        </td>
                                        <td>@item.TotalRep</td>
                                        <td>@item.DateBecameVA</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <partial name="../Shared/_EmptyPartial.cshtml"
                    view-data='new ViewDataDictionary(ViewData) { { "Message", "There are no VAs in the DAO" } }' />
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>

</script>
}