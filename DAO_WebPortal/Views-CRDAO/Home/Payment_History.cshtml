
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@model Helpers.Models.WebsiteViewModels.PaymentHistoryViewModel
<div>
    <h2>Total Payments:  @Model.TotalAmount.ToString("0.00000")</h2>
    @*<h5>Waiting Total: 0.00000*</h5>*@
</div>


<div class="tab-content rounded-bottom mt-2">
    <div class="tab-pane p-3 active" role="tabpanel" id="preview-924">
        <div class="card m-2">
            <div class="card-header">
                <span class="small ms-1"><b>Payment History Table</b></span>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Job Title</th>
                            @*<th scope="col">Status</th>*@
                            <th scope="col">Amount</th>
                            <th scope="col">IBAN</th>
                            <th scope="col">CSPR Wallet</th>
                            <th scope="col">Create Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UserPaymentHistoryList)
                        {
                            <tr>
                                <td>@item.Title</td>
                                @*<td>Waiting*</td>*@
                                <td>@item.JobAmount €</td>
                                <td>@item.IBAN</td>
                                <td>@item.WalletAddress</td>
                                <td>@item.CreateDate.ToString("MM.dd.yyyy HH:mm")</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
