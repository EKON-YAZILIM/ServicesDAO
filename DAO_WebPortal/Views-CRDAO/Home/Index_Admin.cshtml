@if (Model.JobPostDtos.Count() > 0)
{
    <div class="row">
        <div class="col-md-12 mt-4">
            <h4></h4>
            <div id="JobFlipster" class="flipster">
                <ul class="flip-items">
                    @foreach (var item in Model.JobPostDtos)
                    {
                        <li>
                            <div class="cardy card-1">
                                <h4>@item.Title</h4>
                                <p class="fs-7">@item.CreateDate</p>

                                @if (item.JobDescription.Length > 150)
                                {
                                    <p class="fs-7 fw-normal lh-2" title="@item.JobDescription">@item.JobDescription.Substring(0, Math.Min(item.JobDescription.Length, 150)) ..</p>
                                }
                                else
                                {
                                    <p class="fs-7 fw-normal lh-2" title="@item.JobDescription">@item.JobDescription</p>
                                }

                                <p>
                                    <b>@item.Amount Euros</b>
                                    <span class="badge bg-warning float-right mt-1">Admin Approval Pending</span>
                                </p>

                                <div class="mt-5 d-flex justify-content-between">
                                    <div>
                                        <button class="btn btn-outline-secondary btn-sm" type="button" onclick="window.location.href='./Job-Detail/@item.JobID'" disabled="">
                                            Go to Detail
                                        </button>
                                    </div>
                                    <div>
                                        <button class="btn btn-outline-danger btn-sm me-2" type="button" onclick="JobDisapprove(@item.JobID)" disabled="">
                                            Disapprove
                                        </button>
                                        <button class="btn btn-outline-success btn-sm" type="button" onclick="JobApprove(@item.JobID)" disabled="">
                                            Approve
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <!-- /.col-->
    </div>
}


